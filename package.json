{
     "name": "@onegen/optional",
     "description": "C++-based optional utility for TypeScript",
     "author": "onegen (https://github.com/onegentig)",
     "repository": "github:onegentig/optional.ts",
     "license": "MIT",
     "version": "1.1.0",
     "type": "module",
     "main": "dist/optional.js",
     "types": "dist/optional.d.ts",
     "keywords": [
          "c++",
          "optional",
          "utility"
     ],
     "scripts": {
          "build": "tsc",
          "clean": "rm -rvf dist",
          "format": "prettier -wu src",
          "test": "ava"
     },
     "devDependencies": {
          "@ava/typescript": "^5.0.0",
          "ava": "^6.1.3",
          "prettier": "^3.3.3",
          "tsimp": "^2.0.11",
          "typescript": "^5.5.4"
     },
     "ava": {
          "extensions": {
               "ts": "module"
          },
          "nodeArguments": [
               "--import=tsimp"
          ]
     },
     "files": [
          "dist"
     ]
}
